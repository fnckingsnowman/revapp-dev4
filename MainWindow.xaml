<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="RevoluteConfigApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RevoluteConfigApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="RevoluteConfigApp">
    <!--
    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>
     -->

    <NavigationView PaneTitle="Revolute Configurator" x:Name="nvSample" IsBackButtonVisible="Collapsed">
        <!-- Replace the Header with a SelectorBar -->
        <NavigationView.Header>
            <Grid Margin="0,-45,0,0">
                <TextBlock HorizontalAlignment="Center" Margin="0,19,15,0" Text="Device name"/>
                <DropDownButton Margin="-6,0,0,0" AutomationProperties.Name="More">
                    <DropDownButton.Content>
                        <FontIcon Glyph="&#xE712;"/>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Icon="Cancel" Text="Disconnect">
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Icon="Rename" Text="Rename">
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                <Button x:Name="ExpandButton" Content="&#xE70D;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,50,0">
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <Grid>
                                <!-- Use a StackPanel to display the list of devices -->
                                <StackPanel>
                                    <!-- Device 1 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon aligned to the left -->
                                        <FontIcon Glyph="&#xE8A7;" VerticalAlignment="Center" Grid.Column="0"/>

                                        <!-- Name of the device next to the icon -->
                                        <TextBlock Text="Device 1" VerticalAlignment="Center" Margin="10,0" Grid.Column="1"/>

                                        <!-- Connect button aligned to the right -->
                                        <Button Content="Connect" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2"/>
                                    </Grid>

                                    <!-- Device 2 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon aligned to the left -->
                                        <FontIcon Glyph="&#xE8A7;" VerticalAlignment="Center" Grid.Column="0"/>

                                        <!-- Name of the device next to the icon -->
                                        <TextBlock Text="Device 2" VerticalAlignment="Center" Margin="10,0" Grid.Column="1"/>

                                        <!-- Connect button aligned to the right -->
                                        <Button Content="Connect" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2"/>
                                    </Grid>

                                    <!-- Device 3 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon aligned to the left -->
                                        <FontIcon Glyph="&#xE8A7;" VerticalAlignment="Center" Grid.Column="0"/>

                                        <!-- Name of the device next to the icon -->
                                        <TextBlock Text="Device 3" VerticalAlignment="Center" Margin="10,0" Grid.Column="1"/>

                                        <!-- Connect button aligned to the right -->
                                        <Button Content="Connect" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </NavigationView.Header>

        <NavigationView.MenuItems>
            <NavigationViewItem Content="Discover" Tag="Discover" >
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE721;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="BLE connect (for testing)" Tag="BLEPage">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE702;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <AutoSuggestBox PlaceholderText="Type a control name" QueryIcon="Find" AutomationProperties.Name="Search" />

            <NavigationViewItem Icon="GlobalNavigationButton"  Tag="ConfigPage1" >
                <Grid>
                    <TextBlock Margin="0,2.5,40,0">Config 1</TextBlock>

                    <AppBarButton HorizontalAlignment="Right"
                                  Margin="0,-10, -25,-25" 
                                  Icon="More"
                                  IsCompact="True" 
                                  ToolTipService.ToolTip="More"
                                  AutomationProperties.Name="More">
                        <AppBarButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Icon="Delete" Text="Delete"  Tag="rating"/>
                                <MenuFlyoutItem Icon="Rename" Text="Rename"  Tag="match"/>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                </Grid>
            </NavigationViewItem>
            
        </NavigationView.MenuItems>

        <NavigationView.FooterMenuItems>
            <NavigationViewItem Content="Add Configuration" Icon="Add" />
        </NavigationView.FooterMenuItems>

        <Frame x:Name="contentFrame"/>
    </NavigationView>
</Window>