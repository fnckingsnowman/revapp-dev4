<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RevoluteConfigApp.Pages.BLEPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RevoluteConfigApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Button to start BLE scan -->
        <Button 
            Content="Scan for BLE Devices" 
            Click="StartBLEScan_Click"
            Margin="50,50,50,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"/>

        <!-- ListBox to display BLE devices -->
        <ListBox 
    ItemsSource="{Binding Devices}"
    Margin="50,100,50,50"
    HorizontalAlignment="Stretch"
    x:Name="DevicesList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <!-- Show "Pair" button if the device is not paired -->
                        <Button 
                    Content="Pair" 
                    Click="PairButton_Click"
                    Tag="{Binding}"
                    Margin="10,0,0,0"
                    Visibility="{Binding IsPaired, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                        <!-- Show "Connect" button if the device is paired -->
                        <Button 
                    Content="Connect" 
                    Click="ConnectButton_Click"
                    Tag="{Binding}"
                    Margin="10,0,0,0"
                    Visibility="{Binding IsPaired, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- TextBlock to display output with scanned UUIDs -->
        <TextBlock 
            x:Name="OutputTextBlock"
            Margin="50,25,50,0"
            Text="Advertising UUIDs will appear here..."
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"/>
    </Grid>
</Page>