<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RevoluteConfigApp.Pages.ConfigPages.ConfigPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RevoluteConfigApp.Pages.ConfigPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Left half -->
            <ColumnDefinition Width="*" />
            <!-- Right half -->
        </Grid.ColumnDefinitions>

        <!-- Left side (empty for now) -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Config Title -->
                <RowDefinition Height="Auto"/>
                <!-- Top Controls -->
                <RowDefinition Height="*"/>
                <!-- Image (takes remaining space) -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom Controls -->
            </Grid.RowDefinitions>

            <!-- Config Title -->
            <TextBlock x:Name="ConfigTitle" Text="Default Config Name" FontSize="30" Margin="20,0,0,0" Grid.Row="0"/>

            <!-- Top Controls -->
            <Grid x:Name="top" Grid.Row="1" Margin="10" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock HorizontalAlignment="Center" x:Name="ActionsHeader" Text="Actions"/>

                    <RelativePanel x:Name="Acts" RelativePanel.Below="Clockwise" HorizontalAlignment="Center" MinWidth="300" MaxWidth="1000">
                        <RelativePanel Width="150" RelativePanel.AlignLeftWithPanel="True">
                            <TextBlock x:Name="AnticlockwiseHeader" Margin="0,0,0,0" Text="Anticlockwise" FontSize="20" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                            <Button x:Name="AnticlockwiseActDisplay" RelativePanel.Below="AnticlockwiseHeader" MaxWidth="130" MinWidth="50" RelativePanel.AlignHorizontalCenterWith="AnticlockwiseHeader" Margin="0,10,0,0" >
                                <TextBlock>
                                    ---
                                </TextBlock>
                            </Button>
                        </RelativePanel>

                        <RelativePanel Width="150" RelativePanel.AlignRightWithPanel="True">
                            <TextBlock x:Name="ClockwiseHeader" Margin="0,0,0,0" Text="Clockwise" FontSize="20" RelativePanel.AlignHorizontalCenterWithPanel="True"/>
                            <Button x:Name="ClockwiseActDisplay" RelativePanel.Below="ClockwiseHeader" MaxWidth="130" MinWidth="50" RelativePanel.AlignHorizontalCenterWith="ClockwiseHeader" Margin="0,10,0,0">
                                <TextBlock>
                                    ---
                                </TextBlock>
                            </Button>
                        </RelativePanel>
                    </RelativePanel>
                    
                </StackPanel>
            </Grid>

            <!-- Image -->
            <Image Grid.Row="2" MinHeight="200" MaxHeight="700" Margin="0,-20,0,0" Stretch="Uniform">
                <Image.Source>
                    <BitmapImage UriSource="/Assets/Rev/rev1.png" DecodePixelHeight="400"/>
                </Image.Source>
            </Image>

            <!-- Bottom Controls -->
            <Grid x:Name="bottom" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button x:Name="SensitivityButton" Content="Sensitivity and more" FontSize="20" Margin="0,0,0,30">
                    <Button.Flyout>
                        <Flyout Placement="Bottom">
                            <StackPanel Padding="10">
                                <NumberBox 
                    x:Name="ClockwiseSens"
                    Header="Clockwise Sens"
                    Value="1"
                    SpinButtonPlacementMode="Inline"
                    SmallChange="10"
                    LargeChange="100" />

                                <NumberBox
                                    Margin="0,10,0,0"
                    x:Name="AnticlockwiseSens"
                    Header="Anticlockwise Sens"
                    Value="1"
                    SpinButtonPlacementMode="Inline"
                    SmallChange="10"
                    LargeChange="100" />

                                <NumberBox
                                    Margin="0,10,0,0"
                    x:Name="DeadzoneSens"
                    Header="Deadzone"
                    Value="1"
                    SpinButtonPlacementMode="Inline"
                    SmallChange="10"
                    LargeChange="100" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </Grid>
        
        <!--
        <Grid RelativePanel.RightOf="Action1" MinWidth="100" MaxWidth="200">
                            <NumberBox 
                        Margin="0,10,0,0"
                        x:Name="NumberBoxSpinButtonPlacementExample1"
                        Header="Sensitivity"
                        FontSize="20"
                        Value="1"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="10"
                        LargeChange="100"/>
                        </Grid>
        -->
        



        <!-- Right side Grid -->
        <Grid Grid.Column="1" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Adjusts to content -->
                <RowDefinition Height="*"/>
                <!-- Fills remaining space -->
            </Grid.RowDefinitions>

            <!-- Title or other elements (optional) -->
            <StackPanel>
                <TextBlock Text="Actions" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <AutoSuggestBox PlaceholderText="Search Action" QueryIcon="Find"/>
                <Button HorizontalAlignment="Stretch" Margin="0,10,0,0">
                    Customize Action
                </Button>
            </StackPanel>

            <ListView ItemsSource="{x:Bind Reports, Mode=OneWay}" Grid.Row="1" Margin="-5,10,0,0" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ReportModel">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Toggle Button -->
                            <ToggleButton Grid.Column="0" Padding="5">
                                <FontIcon Glyph="&#xE76B;"/>
                            </ToggleButton>

                            <!-- Report Description -->
                            <TextBlock Grid.Column="1" Text="{x:Bind Description}" FontSize="16"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <!-- Right Toggle Button -->
                            <ToggleButton Grid.Column="2" Padding="5">
                                <FontIcon Glyph="&#xE76C;"/>
                            </ToggleButton>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </Grid>
    </Grid>
</Page>